<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin"
    tools:context=".ExerciseDescriptionFragment">

    <TextView
        android:text="@string/exercise_name"
        style="@style/LabelStyle" />

    <TextView
        android:id="@+id/exercise_name"
        tools:text="@string/exercise_name"
        style="@style/FieldStyle" />

    <View style="@style/DividerStyle" />

    <TextView
        android:text="@string/images"
        style="@style/LabelStyle" />

    <ImageView
        android:id="@+id/images"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <View style="@style/DividerStyle" />

    <TextView
        android:text="@string/main_muscle"
        style="@style/LabelStyle" />

    <TextView
        android:id="@+id/main_muscle"
        tools:text="@string/main_muscle"
        style="@style/FieldStyle" />

    <View style="@style/DividerStyle" />

    <TextView
        android:text="@string/targeted_muscles"
        style="@style/LabelStyle" />

    <TextView
        android:id="@+id/targeted_muscles"
        tools:text="@string/targeted_muscles"
        style="@style/FieldStyle" />

    <View style="@style/DividerStyle" />

    <TextView
        android:text="@string/mechanics_type"
        style="@style/LabelStyle" />

    <TextView
        android:id="@+id/mechanics_type"
        tools:text="@string/mechanics_type"
        style="@style/FieldStyle" />

    <View style="@style/DividerStyle" />

    <TextView
        android:text="@string/exercise_type"
        style="@style/LabelStyle" />

    <TextView
        android:id="@+id/exercise_type"
        tools:text="@string/exercise_type"
        style="@style/FieldStyle" />

    <View style="@style/DividerStyle" />

    <TextView
        android:text="@string/equipment"
        style="@style/LabelStyle" />

    <TextView
        android:id="@+id/equipment"
        tools:text="@string/equipment"
        style="@style/FieldStyle" />

    <View style="@style/DividerStyle" />

    <TextView
        android:text="@string/description"
        style="@style/LabelStyle" />

    <TextView
        android:id="@+id/description"
        tools:text="@string/description"
        style="@style/FieldStyle" />

    <View style="@style/DividerStyle" />

    <TextView
        android:text="@string/technique"
        style="@style/LabelStyle" />

    <TextView
        android:id="@+id/technique"
        tools:text="@string/technique"
        style="@style/FieldStyle" />

</LinearLayout>