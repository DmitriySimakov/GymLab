<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".training_sessions.ActiveTrainingSessionFragment">

    <FrameLayout
        android:id="@+id/training_session_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/duraton" />


    <TextView
        android:id="@+id/duraton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:background="?attr/tabBackground"
        android:gravity="center"
        tools:text="32:30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/rest"/>

    <TextView
        android:id="@+id/rest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:background="?attr/tabBackground"
        android:gravity="center"
        tools:text="2:05"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/duraton"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>